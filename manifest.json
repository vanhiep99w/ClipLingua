{
  "manifest_version": 3,
  "name": "ClipLingua",
  "version": "1.0.0",
  "description": "Auto-detect language and translate between English/Vietnamese with grammar correction using Groq AI",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.groq.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["messages.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["floating-popup.html", "floating-popup.js", "groq-client.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Translate or fix selected text"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
